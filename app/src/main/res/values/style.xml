<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="ViewContainer">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/slightly_purple</item>
    </style>

    <style name="Header">
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Header.Large">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Header.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Header.Medium.Green" parent="Header.Medium">
        <item name="android:textColor">@color/pale_green</item>
    </style>

    <style name="SortButton" parent="Header.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="drawableTint">@drawable/selector_text_color_sort_button</item>
        <item name="android:drawableEnd">@drawable/ic_transparent_placeholder_24</item>
        <item name="android:drawableStart">@drawable/ic_sort_24</item>
        <item name="android:background">@drawable/selector_background_sort_button</item>
        <item name="android:textColor">@drawable/selector_text_color_sort_button</item>
    </style>

</resources>